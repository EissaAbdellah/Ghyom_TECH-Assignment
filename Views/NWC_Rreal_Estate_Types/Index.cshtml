@model IEnumerable<GhyomAssignment.Models.NWC_Rreal_Estate_Types>

@{
    ViewData["Title"] = "Index";
}

<h1>أنواع العقار</h1>



<p>
    <a asp-action="Create">انشاء جديد</a>
   
</p>




<table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        رمز نوع العقار
                    </th>
                    <th>
                        وصف العقار
                    </th>
                    <th>
                        ملاحظات
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
