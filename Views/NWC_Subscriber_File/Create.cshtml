@model GhyomAssignment.Models.NWC_Subscriber_File

@{
    ViewData["Title"] = "Create";
}

<h1>انشاء جديد</h1>

<h4>المشتركين</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NWC_Subscriber_File_Id" class="control-label">
                    رقم الهوية
                </label>
                <input asp-for="NWC_Subscriber_File_Id" class="form-control" />
                <span asp-validation-for="NWC_Subscriber_File_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NWC_Subscriber_File_Name" class="control-label">
                    الاسم
                </label>
                <input asp-for="NWC_Subscriber_File_Name" class="form-control" />
                <span asp-validation-for="NWC_Subscriber_File_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NWC_Subscriber_File_City" class="control-label">
                    المدينة
                </label>
                <input asp-for="NWC_Subscriber_File_City" class="form-control" />
                <span asp-validation-for="NWC_Subscriber_File_City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NWC_Subscriber_File_Area" class="control-label">
                    الحي
                </label>
                <input asp-for="NWC_Subscriber_File_Area" class="form-control" />
                <span asp-validation-for="NWC_Subscriber_File_Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NWC_Subscriber_File_Mobile" class="control-label">
                    رقم الجوال
                </label>
                <input asp-for="NWC_Subscriber_File_Mobile" class="form-control" />
                <span asp-validation-for="NWC_Subscriber_File_Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NWC_Subscriber_File_Reasons" class="control-label">
                    ملاحظات
                </label>
                <input asp-for="NWC_Subscriber_File_Reasons" class="form-control" />
                <span asp-validation-for="NWC_Subscriber_File_Reasons" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">العودة الي القائمة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
