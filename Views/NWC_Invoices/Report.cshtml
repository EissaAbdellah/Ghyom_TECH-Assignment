@model IEnumerable<GhyomAssignment.Models.NWC_Invoices>

@{
    ViewData["Title"] = "Index";
}

<h1>الفواتير</h1>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                رقم الفاتورة
            </th>

            <th>
                تاريخ الفاتورة
            </th>


            <th>
                كمية الاستهلاك
            </th>

            <th>
                الصرف الصحي
            </th>


            <th>
                اجمالي الفاتورة
            </th>

            <th>
                نوع العقار
            </th>
            <th>
                رقم الاشتراك
            </th>
            <th>
                اسم المشترك
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Invoices_No)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Invoices_Date)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Invoices_Amount_Consumption)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Invoices_Is_There_Sanitation)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Invoices_Total_Bill)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Rreal_Estate_Types.NWC_Rreal_Estate_Types_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Subscription_File.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NWC_Subscriber_File.NWC_Subscriber_File_Name)
                </td>
              
            </tr>
        }
    </tbody>
</table>
